<!-- JAVA와 연결할 Mapper 파일 설정 -->
<mapper namespace="poly.persistance.mapper.SingleMapper">
	<!-- insert, update, delete, select -->
	<select id="getComIntroIMG" parameterType="SingleDTO" resultType="SingleDTO">
		SELECT 
			SINGLE_NO AS single_no,
			PAGE AS page,
			CLASS AS cls,
			CONTENT AS content
		FROM SINGLE
		WHERE 1=1
	</select>
	
	<!-- insert, update, delete, select -->
